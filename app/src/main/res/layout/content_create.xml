<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20px">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Handphone"
                android:textStyle="normal|bold" />
            <EditText

                android:id="@+id/Et_notelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="085...."/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/Et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="bit@gmail.com"
                android:ems="10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Cuti"
                android:textStyle="normal|bold" />
            <Spinner

                android:id="@+id/Sp_jenis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Mulai"
                android:textStyle="normal|bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/tanggal_mulai"
                android:hint="12-02-2016"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            </LinearLayout>
    <!-- -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Selesai"
                android:textStyle="normal|bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/tanggal_selesai"
                    android:hint="12-02-2016"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <!--NIP ATASAN-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NIP Atasan"
                android:textStyle="normal|bold" />
            <EditText
                android:id="@+id/Et_Nip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!-- -->
            <!--JABATAN ATASAN-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jabatan Atasan"
                android:textStyle="normal|bold" />
            <EditText
                android:id="@+id/Et_jabatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!-- -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keterangan"
                android:textStyle="normal|bold" />
            <EditText
                android:id="@+id/Et_Keterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_gravity="center"
                android:layout_marginTop="10px"
                android:textColor="@color/colorWhite"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUBMIT"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
